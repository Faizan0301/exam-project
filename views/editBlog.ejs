<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- fontawsom -->
    <link rel="stylesheet" href="../asset/css/all.min.css">
    <!-- bootstrap icon -->
    <link rel="stylesheet" href="../asset/css/bootstrap-icons.min.css">
    <!-- bootstrap -->
    <link rel="stylesheet" href="../asset/css/bootstrap.min.css">
    <!-- css -->
    <link rel="stylesheet" href="../asset/css/style.css">
</head>
<body data-bs-theme="dark" class="bg-black">
    <%- include('partial/header.ejs') %>
    
    <!-- edit blog -->
    <section class="blog" style="margin-top: 5rem;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <form action="/blog/addBlog" method="post" >
                        <div class="border border-info p-5 rounded-3">
                            <h2 class="text-center">Edit blog...</h2>
                            <label class="form-label text-info-emphasis fw-semibold" for="">Title</label>
                            <input type="text" name="title" value="<%= data.title %>" class="form-control p-3 mb-4 focus-ring focus-ring-dark border-info bg-black border text-info-emphasis">
                            <input type="hidden" name="id" value="<%= data._id %>">
                            <label class="form-label text-info-emphasis fw-semibold" for="">Image</label>
                            <input type="text" class="custom-file-input form-control p-3 mb-4 focus-ring focus-ring-dark border-info bg-black border text-info-emphasis" name="image" />
                            <label class="form-label text-info-emphasis fw-semibold" for="">Date</label>
                            <input type="date" value="<%= data.date %>" name="date" class="form-control p-3 mb-4 focus-ring focus-ring-dark border-info bg-black border text-info-emphasis">
                            <label class="form-label text-info-emphasis fw-semibold" for="">Discription</label>
                            <input type="text" name="discription" value="<%= data.discription %>" class="form-control p-3 mb-4 focus-ring focus-ring-dark border-info bg-black border text-info-emphasis">
                            <input type="submit" value="Update" class="form-control btn btn-outline-info fw-bold py-2 ">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- JQuery -->
    <script src="../asset/js/code.jquery.com_jquery-3.7.0.min.js"></script>
    <!-- bootstrap js -->
    <script src="../asset/js/bootstrap.bundle.min.js"></script>
    <!-- main js -->
    <script src="../asset/js/main.js"></script>
</body>
</html>